{
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "components": ["components"],
        "img": ["img"],
        "pages": ["pages"],
        "store": ["store"],
        "styles": ["styles"],
        "utils": ["utils"]
      },
      "jsx": "react",
      "target": "ES2015",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }